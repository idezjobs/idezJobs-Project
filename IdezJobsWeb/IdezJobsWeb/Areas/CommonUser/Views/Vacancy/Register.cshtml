@model IdezJobsWeb.Models.Vacancy
@{
	ViewBag.Title = "Register";
	Layout = "~/Areas/CommonUser/Views/Shared/_Layout.cshtml";
}
<h2>Fazer Inscrição Nesta Vaga</h2>
@using (Html.BeginForm( ))
{
	@Html.ValidationSummary(true)
	<fieldset>
		<legend>Vacancy</legend>
		@Html.HiddenFor(model => model.Id)
		<div class="editor-label">
			@Html.LabelFor(model => model.RegistrationDeadline)
		</div>
		<div class="editor-field">
			@Html.DisplayFor(model => model.RegistrationDeadline)
			@Html.ValidationMessageFor(model => model.RegistrationDeadline)
		</div>
		<div class="editor-field">
			@Html.DisplayFor(model => model.Description)
			@Html.ValidationMessageFor(model => model.Description)
		</div>
		<div class="editor-label">
			@Html.LabelFor(model => model.CompanyName)
		</div>
		<div class="editor-field">
			@Html.DisplayFor(model => model.CompanyName)
			@Html.ValidationMessageFor(model => model.CompanyName)
		</div>
		<div class="editor-field">
			@Html.HiddenFor(model => model.JobsNumber)
			@Html.ValidationMessageFor(model => model.JobsNumber)
		</div>
		<p>
			<input type="submit" value="FazerInscrição" />
		</p>
	</fieldset>
}
<div>
	@Html.ActionLink("Index", "Index")
</div>
