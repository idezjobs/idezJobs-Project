@model IdezJobsWeb.Models.Vacancy

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Business/Views/Shared/_Layout.cshtml";
}

<h2>Alterar Vaga</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Vaga</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.RegistrionDate,"Data Registro:")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RegistrionDate)
            @Html.ValidationMessageFor(model => model.RegistrionDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RegistrationDeadline,"Data Limite Para Inscrição:")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RegistrationDeadline)
            @Html.ValidationMessageFor(model => model.RegistrationDeadline)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description,"Descrição:")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OfficeHours,"Horário de Trabalho:")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OfficeHours)
            @Html.ValidationMessageFor(model => model.OfficeHours)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Benefits,"Benefícios:")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Benefits)
            @Html.ValidationMessageFor(model => model.Benefits)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.JobsNumber,"Número de Vagas:")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.JobsNumber)
            @Html.ValidationMessageFor(model => model.JobsNumber)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Index", "Index")
</div>
