<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
	@Html.Telerik( ).StyleSheetRegistrar( ).DefaultGroup(group => group.Add("telerik.common.min.css").Add("telerik.Metro.css").Add("telerik.rtl.css"))
</head>
<body>
	<div id="logindisplay">
		@Html.Partial("_LogOnPartial")
	</div>
	@Html.Telerik( ).Menu( ).Name("Menu").Items(raiz =>
{
	raiz.Add( ).Text("Página Incial").Action("Index", "Home");

	raiz.Add( ).Text("Cadastro").Items(submenu =>
	{
		 submenu.Add( ).Text("Vagas").Items(menude =>
		{
			menude.Add( ).Text("Cadastrar Vagas").Action("Create", "Vacancy");
			menude.Add( ).Text("Listar Vagas").Action("ListVacancyDetails", "Vacancy");


		});

		submenu.Add( ).Text("Perfis Vagas").Items(menude =>
		{
			menude.Add( ).Text("Cadastrar Perfis de Vagas").Action("Create", "ProfileVacancy");
			menude.Add( ).Text("Listar Perfis").Action("ListProfileVacancy", "ProfileVacancy");


		});

		


		submenu.Add( ).Text("Usuários").Items(menude =>
		{
			menude.Add( ).Text("Cadastrar Usuários").Action("Create", "User");
			menude.Add( ).Text("Listar Usuários").Action("ListDetails", "User");


		});

		
		


	});

	

	raiz.Add( ).Text("Email").Items(submenu =>
	{
		submenu.Add( ).Text("Enviar Email").Action("SendMailForJobs", "FazerPublicacaoEmail");
		
	});

	raiz.Add( ).Text("Relatórios").Items(submenu =>
	{
		submenu.Add( ).Text("Ver Vagas Cadastradas").Action("ListVacancy", "Vacancy", new { area = "Administrative" });
		submenu.Add( ).Text("Ver Empresas Cadastradas").Action("ListCompany", "Company", new { area = "Administrative" });

	});

	raiz.Add( ).Text("Configuração").Items(submenu =>
	{
		submenu.Add( ).Text("Trocar Senha").Action("TrocarSenha", "Configuracao");

	});

	raiz.Add( ).Text("Sair").Action("LogOff", "Home");


})
	@RenderBody( )
	@Html.Telerik( ).ScriptRegistrar( ).jQuery(false)
</body>
</html>
